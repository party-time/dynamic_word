.container2 {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
}

.box {
  width: 100%;
  position: relative;
  overflow:scroll; 
}

.main {
  width: 95%;
  height: 50px;
  background: #eee;
  border: 1px solid #ccc;
  margin: 5px auto;
  text-align: center;
  line-height: 50px;
}

.mainmove {
  position: absolute;
  opacity: 0.7;
}

.maind {
  background: #fff;
  border: 1px dashed #efefef;
}

.mainend {
  position: static;
  opacity: 1;
}
